<dm version="1.0"
    level="1"
    type="ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dmext="http://www.blue-andi.de/vscp/schema/vscp-dm-ext-schema">

    <!-- Enabled/Disabled row and decide to use the standard or the extension -->
    <row enabled="true" type="ext">

        <!-- Describe your rule here. -->
        <description>If a information.button event from node 2 is received, the action 1 will be executed.</description>
    
        <!-- Set originating address to check or not -->
        <oaddr enabled="true">2</oaddr>
    
        <!-- Set hardcoded flag to check or not -->
        <hardcoded enabled="false">
        </hardcoded>
    
        <!-- Mask to trigger row -->
        <mask class="0x1FF" type="0xFF">
        </mask>

        <!-- Filter to trigger row -->
        <filter class="20" type="1">
        </filter>

        <!-- Set zone to check or not. The value is ignorred in case of standard row. -->
        <zone enabled="false">255</zone>

        <!-- Set sub-zone to check or not. The value is ignorred in case of standard row. -->
        <subzone enabled="false">255</subzone>

        <!-- Set data to check or not. The data is ignorred in case of standard row. -->
        <data>
            <byte id="0" enabled="false">0x01</byte>
            <byte id="3" enabled="false">0x02</byte>
            <byte id="4" enabled="false">0x03</byte>
            <byte id="5" enabled="false">0x04</byte>
        </data>
        
        <!-- Action code -->
        <action>1</action>

        <!-- Action parameter -->
        <param>2</param>
        
    </row>

    <!-- Enabled/Disabled row and decide to use the standard or the extension -->
    <row enabled="true" type="std">

        <!-- Describe your rule here. -->
        <description>If a information.button event from node 3 is received, the action 2 will be executed.</description>
    
        <!-- Set originating address to check or not -->
        <oaddr enabled="true">3</oaddr>
    
        <!-- Set hardcoded flag to check or not -->
        <hardcoded enabled="false">
        </hardcoded>
    
        <!-- Mask to trigger row -->
        <mask class="0x1FF" type="0xFF">
        </mask>

        <!-- Filter to trigger row -->
        <filter class="20" type="1">
        </filter>

        <!-- Set zone to check or not. The value is ignorred in case of standard row. -->
        <zone enabled="false">255</zone>

        <!-- Set sub-zone to check or not. The value is ignorred in case of standard row. -->
        <subzone enabled="false">255</subzone>

        <!-- Set data to check or not. The data is ignorred in case of standard row. -->
        <data>
            <byte id="0" enabled="false">0x00</byte>
            <byte id="3" enabled="false">0x00</byte>
            <byte id="4" enabled="false">0x00</byte>
            <byte id="5" enabled="false">0x00</byte>
        </data>
        
        <!-- Action code -->
        <action>2</action>

        <!-- Action parameter -->
        <param>3</param>
        
    </row>
    
</dm>
